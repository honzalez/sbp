# ===== PHP a systémové soubory =====
*.log
*.lock
*.tmp
*.bak
*.swp
.DS_Store
Thumbs.db

# ===== Composer / PHP vendor =====
/vendor/

# ===== Node.js / npm (kdybys někdy použil) =====
/node_modules/

# ===== Lokální konfigurace (nepatří do gitu) =====
/config/config.php

# ===== Uploads – ignoruj obsah, ale ponech strukturu (.gitkeep) =====
/uploads/**
!/uploads/**/
!/uploads/**/.gitkeep

# ===== CSS/JS buildy nebo zálohy =====
/css/backup/*
!/css/backup/.gitkeep
/css/modules/*
!/css/modules/.gitkeep

# ===== Scripts – zatím prázdné, držíme jen .gitkeep =====
/scripts/*
!/scripts/.gitkeep

# ===== API, assets, core – ignoruj obsah, ale nech .gitkeep =====
/api/*
!/api/.gitkeep
/assets/*
!/assets/.gitkeep
/core/*
!/core/.gitkeep
